<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >
    <android.support.v7.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@null"
        android:id="@+id/tb_me">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/tv_me"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_me"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/me_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/n1"
            android:scaleType="centerCrop" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="110dp"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <TextView
                    android:id="@+id/me_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="161"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="5dp"
                    android:text="帖子"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_concern"
                android:orientation="vertical"
                android:layout_marginLeft="215dp"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/me_concern"
                android:textSize="18sp"
                android:text="1.6m"
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_concern"
                android:textSize="18sp"
                android:text="关注者"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_follow"
                android:orientation="vertical"
                android:layout_marginLeft="310dp"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/me_follow"
                    android:textSize="18sp"
                    android:text="17"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_follow"
                    android:textSize="18sp"
                    android:text="关注"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

        <Button
            android:id="@+id/me_revise"
            android:layout_width="220dp"
            android:layout_height="33dp"
            android:background="@drawable/buttonshape2"
            android:layout_below="@+id/linearLayout"
            android:layout_marginLeft="130dp"
            android:text="编辑个人主页"
            android:textSize="16sp" />
    </RelativeLayout>
    </RelativeLayout>
    <!--FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_below="@+id/rl_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.app.FragmentTabHost

        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0" />

    </android.support.v4.app.FragmentTabHost-->
</RelativeLayout>
